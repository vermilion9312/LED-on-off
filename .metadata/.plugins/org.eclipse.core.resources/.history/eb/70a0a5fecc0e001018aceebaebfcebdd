#ifndef INC_OPERATION_H_
#define INC_OPERATION_H_

#include "button.h"
#include "led.h"

typedef enum {
	NODE_SUCCESS,
	NODE_FAILURE
} NodeState;

typedef struct _Node Node;
typedef NodeState (* Tick)(void*);

typedef struct _LeafNode LeafNode;

struct _LeafNode {
	Tick tick;
};

struct _Node {
	Tick tick;
	Node** children;
	size_t count;
};

extern Node root;

#endif /* INC_OPERATION_H_ */
