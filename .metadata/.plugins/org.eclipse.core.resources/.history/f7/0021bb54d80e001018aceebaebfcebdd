#include "operation.h"

NodeState run_sequence(void* node) {
	CompositeNode* n = (CompositeNode*)node;
	for (size_t i = 0; i < n->child_count; ++i) {
		Tick tick = ((LeafNode*)n->children[i])->tick;
		if (tick(n->children[i]) == NODE_FAILURE)
			return NODE_FAILURE;
	}
	return NODE_SUCCESS;
}

NodeState run_selector(void* node) {
	CompositeNode* n = (CompositeNode*)node;
	for (size_t i = 0; i < n->child_count; ++i) {
		Tick tick = ((LeafNode*)n->children[i])->tick;
		if (tick(n->children[i]) == NODE_SUCCESS)
			return NODE_SUCCESS;
	}
	return NODE_FAILURE;
}


static LeafNode button_condition  = { is_button_pressed };
static LeafNode led_off_action    = { turn_off_led      };
static LeafNode led_on_acttion    = { turn_on_led       };

static void* sequence_children[] = { &button_condition, &led_on_action };
static CompositeNode sequence = { run_sequence, sequence_children, 2 };

static void* selector_children[] = { &sequence, &led_off_action };
CompositeNode root = { run_selector, selector_children, 2 };


