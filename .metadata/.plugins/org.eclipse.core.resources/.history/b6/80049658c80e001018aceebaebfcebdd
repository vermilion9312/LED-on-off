#ifndef INC_OPERATION_H_
#define INC_OPERATION_H_

#include "button.h"
#include "led.h"

typedef enum {
	NODE_SUCCESS,
	NODE_FAILURE
} NodeState;

typedef NodeState (* Tick)(void);

typedef struct _Node Node;

struct _Node {
	Tick tick;
	Node** children;
	size_t count;
};

#endif /* INC_OPERATION_H_ */
